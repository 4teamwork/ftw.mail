<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.mail">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <h1 class="documentFirstHeading" tal:content="context/title" />
        <tal:noattachments condition="not: view/attachments">
            Keine Anhänge gefunden.
        </tal:noattachments>
        <tal:attachments condition="view/attachments">
        <h2 i18n:translate="">Attachments</h2>
        <form action="" method="post">
            <table class="listing">
                <thead>
                    <tr>
                        <th class="nosort">
                            &nbsp;
                        </th>
                        <th class="nosort">
                            Typ
                        </th>
                        <th class="nosort">
                            Dateiname
                        </th>
                        <th class="nosort">
                            Gr&ouml;sse
                        </th>
                    </tr>
                </thead>
                <tbody>
                <tal:items tal:repeat="item view/attachments">
                    <tr>
                        <td>
                            <input type="checkbox" name="attachment:list"
                                   checked="checked"
                                   tal:attributes="value python:str(item['position'])"
                                   />
                        </td>
                        <td>
                            <img tal:define="icon python:item['icon']"
                                 tal:condition="icon" src=""
                                 tal:attributes="src string:${here/portal_url}/$icon;
                                                 alt python:item['type-name'];
                                                 title python:item['type-name']"/>
                        </td>
                        <td>
                            <a href=""
                               tal:define="position python:item['position']"
                               tal:attributes="href string:${here/absolute_url}/get_attachment?position=${position}">
                                <span tal:content="python:item['filename']">filename</span>
                            </a>
                        </td>
                        <td>
                            <span tal:content="python:context.getObjSize(size=item['size'])">0Kb</span>
                        </td>
                    </tr>
                </tal:items>
                </tbody>
            </table>
            <p>
            <input type="radio"
                   id="delete_nothing"
                   name="del_attachments"
                   value="nothing"
                   checked="checked"
                   />
            <label for="delete_nothing">
                nichts löschen
            </label>
            </p>
            <p>
            <input type="radio"
                   id="delete_orginal_attachments"
                   name="del_attachments"
                   value="selected"
                   />
            <label for="delete_orginal_attachments">
                Anhänge aus Mail löschen
            </label>
            </p>
            <p>
            <input type="radio"
                   id="delete_all"
                   name="del_attachments"
                   value="all"
                   />
            <label for="delete_all">
                alle Anhänge aus Mail löschen
            </label>
            </p>
            <input type="submit" class="standalone" value="Dokumente erstellen"/>
        </form>
        </tal:attachments>
    </tal:main-macro>
</metal:main>
</body>
</html>